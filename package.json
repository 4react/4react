{
  "author": "Matteo Zanoncello",
  "private": true,
  "workspaces": [
    "modules/*"
  ],
  "repository": "https://github.com/4react/4react",
  "scripts": {
    "build:data-types": "yarn --cwd \"modules/data-types\" build",
    "build:syntax": "yarn --cwd \"modules/syntax\" build",
    "build:hooks": "yarn --cwd \"modules/hooks\" build",
    "build:flex": "yarn --cwd \"modules/flex\" build",
    "build:stories": "yarn --cwd \"modules/stories\" build",
    "build:store": "yarn --cwd \"modules/store\" build",
    "build:localize": "yarn --cwd \"modules/localize\" build",
    "build:skeleton": "yarn --cwd \"modules/skeleton\" build",
    "build:responsive": "yarn --cwd \"modules/responsive\" build",
    "pre": "yarn build:data-types && yarn build:syntax && yarn build:hooks && yarn build:flex && yarn build:stories && yarn build:store && yarn build:localize && yarn build:skeleton && yarn build:responsive",
    "storybook": "start-storybook -s .storybook/static",
    "build:storybook": "build-storybook -o build-storybook -s .storybook/static"
  },
  "dependencies": {
    "@4react/config": "2020.2.0-alpha",
    "@4react/data-types": "2020.2.0-alpha",
    "@4react/eslint-config": "2020.2.0-alpha",
    "@4react/flex": "2020.2.0-alpha",
    "@4react/hooks": "2020.2.0-alpha",
    "@4react/router": "2020.2.0-alpha",
    "@4react/state": "2020.2.0-alpha",
    "@4react/store": "2020.2.0-alpha",
    "@4react/stories": "2020.2.0-alpha",
    "@4react/syntax": "2020.2.0-alpha",
    "@storybook/addon-a11y": "^6.0.27",
    "@storybook/addon-actions": "^6.0.27",
    "@storybook/addon-controls": "^6.0.27",
    "@storybook/addon-knobs": "^6.0.27",
    "@storybook/addon-viewport": "^6.0.27",
    "@storybook/react": "^6.0.27",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "babel-eslint": "^10.1.0",
    "confusing-browser-globals": "^1.0.9",
    "eslint": "^7.5.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsdoc": "^30.0.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.8",
    "react": "^16.14.0",
    "typescript": "4.0.3",
    "typescript-plugin-css-modules": "^2.4.0"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "devDependencies": {
    "ts-dedent": "^2.0.0"
  }
}
