{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017"
    ],
    "jsx": "react",
    "moduleResolution": "Node",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "declaration": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "typeRoots": [
      "../../node_modules/@types",
      "./node_modules/@types"
    ]
  }
}
