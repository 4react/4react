{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "types": ["node"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "removeComments": true
  },
  "exclude": ["node_modules"],
  "include": ["modules/**/*"]
}
